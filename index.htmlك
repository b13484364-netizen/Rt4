                url: 'https://images.unsplash.com/photo-1432889490240-84df33d47091?w=300&h=300&fit=crop&crop=entropy&auto=format'
            },
            {
                name: 'أضواء شمالية',
                id: 'aurora',
                emoji: '🌌',
                url: 'https://images.unsplash.com/photo-1483347756197-71ef80e95f73?w=300&h=300&fit=crop&crop=entropy&auto=format'
            },
            {
                name: 'حقل زهور',
                id: 'flower_field',
                emoji: '🌺',
                url: 'https://images.unsplash.com/photo-1500648767791-00dcc994a43e?w=300&h=300&fit=crop&crop=entropy&auto=format'
            },
            {
                name: 'جسر طبيعي',
                id: 'natural_bridge',
                emoji: '🌉',
                url: 'https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=300&h=300&fit=crop&crop=entropy&auto=format'
            },
            {
                name: 'بركان نشط',
                id: 'volcano',
                emoji: '🌋',
                url: 'https://images.unsplash.com/photo-1544735716-392fe2489ffa?w=300&h=300&fit=crop&crop=entropy&auto=format'
            },
            {
                name: 'كهف الجليد',
                id: 'ice_cave',
                emoji: '❄️',
                url: 'https://images.unsplash.com/photo-1518837695005-2083093ee35b?w=300&h=300&fit=crop&crop=entropy&auto=format'
            }
        ];

        // متغيرات التطبيق
        let selectedImage = null;
        let selectedDuration = 5;
        let currentRoom = null;
        let currentUser = null;
        let database = null;
        let messagesRef = null;
        let usersRef = null;
        let roomRef = null;
        let isReady = false;
        let maxUsers = 5;
        let allowVoiceMessages = true;
        let allowImages = true;
        let sessionStartTime = null;
        let sessionDuration = 5 * 60 * 1000;
        let countdownInterval = null;

        // متغيرات تسجيل الصوت
        let mediaRecorder = null;
        let audioChunks = [];
        let isRecording = false;
        let recordingTimer = null;
        let recordingStartTime = 0;

        // عناصر DOM
        let loginScreen, chatScreen, expiredScreen, imageGallery, usernameInput, passwordInput;
        let enterRoomBtn, enterBtnText, uploadImageBtn, customImageInput, customDuration;
        let roomImagePreview, messagesContainer, messageInput, sendMessageBtn;
        let sendImageBtn, imageMessageInput, charCount, connectionStatus, statusText;
        let userCount, messageCount, roomStatus, shareRoomBtn, leaveRoomBtn;
        let connectionAlert, maxUsersSelect, allowVoiceMessagesInput, allowImagesInput;
        let maxUsersDisplay, voiceRecordBtn, voiceRecordingPanel, stopRecordingBtn;
        let cancelRecordingBtn, recordingTimerDisplay, roomFullModal, newSessionBtn;
        let timeRemaining, totalTimeDisplay;
        let previewImage, previewDuration, previewMaxUsers, previewUsername, previewFeatures;

        // تهيئة Firebase
        function initializeFirebase() {
            try {
                firebase.initializeApp(firebaseConfig);
                database = firebase.database();
                
                updateConnectionStatus('متصل بـ Firebase', 'success');
                isReady = true;
                
                console.log('✅ Firebase تم تهيئته بنجاح');
                
                // اختبار الاتصال
                database.ref('.info/connected').on('value', (snapshot) => {
                    if (snapshot.val() === true) {
                        showConnectionStatus('متصل بـ Firebase', 'success');
                    } else {
                        showConnectionStatus('انقطع الاتصال بـ Firebase', 'error');
                    }
                });
                
            } catch (error) {
                console.error('خطأ في تهيئة Firebase:', error);
                updateConnectionStatus('خطأ في الاتصال', 'error');
                showAlert('خطأ في الاتصال بـ Firebase: ' + error.message);
            }
        }

        // تحديث حالة الاتصال
        function updateConnectionStatus(message, type) {
            if (connectionAlert) {
                const icon = type === 'success' ? '✅' : type === 'warning' ? '⚠️' : '❌';
                const colorClass = type === 'success' ? 'bg-green-50 dark:bg-green-900/30 border-green-200 dark:border-green-800 text-green-800 dark:text-green-200' :
                                  type === 'warning' ? 'bg-yellow-50 dark:bg-yellow-900/30 border-yellow-200 dark:border-yellow-800 text-yellow-800 dark:text-yellow-200' :
                                  'bg-red-50 dark:bg-red-900/30 border-red-200 dark:border-red-800 text-red-800 dark:text-red-200';
                
                connectionAlert.className = `mb-6 p-4 rounded-xl border ${colorClass}`;
                connectionAlert.innerHTML = `
                    <div class="flex items-start space-x-3 space-x-reverse">
                        <div class="text-2xl">${icon}</div>
                        <div>
                            <h3 class="font-semibold mb-2">${message}</h3>
                            <p class="text-sm">
                                ${type === 'success' ? 'تطبيق المحادثة جاهز للاستخدام مع قاعدة البيانات السحابية' : 
                                  type === 'warning' ? 'يعمل في وضع محدود' : 
                                  'تحقق من اتصالك بالإنترنت'}
                            </p>
                        </div>
                    </div>
                `;
            }
        }

        // عرض حالة الاتصال
        function showConnectionStatus(message, type = 'error') {
            if (!statusText) return;
            statusText.textContent = message;
            
            const statusDiv = connectionStatus.querySelector('div');
            statusDiv.className = `px-4 py-2 rounded-lg shadow-lg flex items-center space-x-2 space-x-reverse ${
                type === 'success' ? 'bg-green-500' : 
                type === 'warning' ? 'bg-yellow-500' : 'bg-red-500'
            } text-white`;
            
            connectionStatus.classList.remove('hidden');
            
            if (type === 'success') {
                setTimeout(() => {
                    connectionStatus.classList.add('hidden');
                }, 3000);
            }
        }

        // إدارة اختيار المدة
        function setupDurationSelection() {
            const durationButtons = document.querySelectorAll('.duration-btn');
            
            durationButtons.forEach(btn => {
                btn.addEventListener('click', () => {
                    // إزالة التحديد من جميع الأزرار
                    durationButtons.forEach(b => {
                        b.classList.remove('bg-primary', 'text-white');
                        b.classList.add('bg-gray-200', 'dark:bg-gray-600', 'text-gray-700', 'dark:text-gray-300');
                    });
                    
                    // تحديد الزر المضغوط
                    btn.classList.add('bg-primary', 'text-white');
                    btn.classList.remove('bg-gray-200', 'dark:bg-gray-600', 'text-gray-700', 'dark:text-gray-300');
                    
                    selectedDuration = parseInt(btn.dataset.duration);
                    if (customDuration) customDuration.value = '';
                    updatePreview();
                });
            });
            
            // مدة مخصصة
            if (customDuration) {
                customDuration.addEventListener('input', () => {
                    if (customDuration.value) {
                        selectedDuration = Math.min(120, Math.max(1, parseInt(customDuration.value) || 5));
                        
                        // إزالة التحديد من الأزرار المحددة مسبقاً
                        durationButtons.forEach(b => {
                            b.classList.remove('bg-primary', 'text-white');
                            b.classList.add('bg-gray-200', 'dark:bg-gray-600', 'text-gray-700', 'dark:text-gray-300');
                        });
                    }
                    updatePreview();
                });
            }
        }

        // تحديث المعاينة
        function updatePreview() {
            if (previewImage) {
                previewImage.textContent = selectedImage ? 
                    `🖼️ الصورة: ${selectedImage.emoji} ${selectedImage.name}` : 
                    '🖼️ الصورة: لم تُختر بعد';
            }
            if (previewDuration) {
                previewDuration.textContent = `⏰ المدة: ${selectedDuration} دقيقة`;
            }
            if (previewMaxUsers) {
                previewMaxUsers.textContent = `👥 الحد الأقصى: ${maxUsers} ${maxUsers === 2 ? 'شخصان' : 'أشخاص'}`;
            }
            if (previewUsername && usernameInput) {
                previewUsername.textContent = usernameInput.value.trim() ? 
                    `👤 المستخدم: ${usernameInput.value.trim()}` : 
                    '👤 المستخدم: غير محدد';
            }
            if (previewFeatures) {
                const features = [];
                if (allowVoiceMessages) features.push('صوت');
                if (allowImages) features.push('صور');
                previewFeatures.textContent = `✨ الميزات: ${features.join('، ') || 'نص فقط'}`;
            }
        }

        // تحميل الصور في المعرض
        function loadImageGallery() {
            if (!imageGallery) return;

            imageGallery.innerHTML = '';
            availableImages.forEach((image, index) => {
                const imageDiv = document.createElement('div');
                imageDiv.className = `image-hover cursor-pointer rounded-lg overflow-hidden border-3 border-transparent 
                                     hover:border-primary transition-all aspect-square relative bg-gray-100 dark:bg-gray-600`;
                
                imageDiv.innerHTML = `
                    <img src="${image.url}" alt="${image.name}" class="w-full h-full object-cover" 
                         onerror="this.src='data:image/svg+xml;base64,'">
                    <div class="absolute inset-0 bg-black bg-opacity-0 hover:bg-opacity-30 transition-all 
                                flex items-center justify-center">
                        <span class="text-white text-xs font-bold opacity-0 hover:opacity-100 transition-opacity
                                   bg-black bg-opacity-70 px-2 py-1 rounded">
                            ${image.emoji} ${image.name}
                        </span>
                    </div>
                    <div class="absolute top-1 right-1 bg-black bg-opacity-70 text-white text-xs px-1 py-0.5 rounded">
                        ${index + 1}
                    </div>
                `;
                
                imageDiv.addEventListener('click', () => selectImage(image, imageDiv));
                imageGallery.appendChild(imageDiv);
            });
        }

        // اختيار صورة
        function selectImage(image, element) {
            document.querySelectorAll('.border-primary').forEach(el => {
                el.classList.remove('border-primary');
                el.classList.add('border-transparent');
            });
            
            element.classList.add('border-primary');
            element.classList.remove('border-transparent');
            
            selectedImage = image;
            updateEnterButton();
            updatePreview();
        }

        // تحديث زر الدخول
        function updateEnterButton() {
            if (!enterRoomBtn || !enterBtnText || !passwordInput || !usernameInput) return;
            
            const hasImage = selectedImage !== null;
            const hasUsername = usernameInput.value.trim().length > 0;
            const hasPassword = passwordInput.value.trim().length > 0;
            const isSystemReady = isReady;
            
            enterRoomBtn.disabled = !(hasImage && hasUsername && hasPassword && isSystemReady);
            
            if (!isSystemReady) {
                enterBtnText.textContent = '🔄 جاري الاتصال بـ Firebase...';
            } else if (hasImage && hasUsername && hasPassword) {
                enterRoomBtn.classList.remove('opacity-50', 'cursor-not-allowed');
                enterBtnText.textContent = '💬 دخول الغرفة';
            } else {
                enterRoomBtn.classList.add('opacity-50', 'cursor-not-allowed');
                if (!hasImage) {
                    enterBtnText.textContent = '🖼️ اختر منظر طبيعي';
                } else if (!hasUsername) {
                    enterBtnText.textContent = '👤 أدخل اسم المستخدم';
                } else if (!hasPassword) {
                    enterBtnText.textContent = '🔒 أدخل كلمة المرور';
                }
            }
        }

        // إنشاء مفتاح الغرفة
        function generateRoomKey(image, password) {
            const combined = `${image.id}_${password}`;
            let hash = 0;
            for (let i = 0; i < combined.length; i++) {
                const char = combined.charCodeAt(i);
                hash = ((hash << 5) - hash) + char;
                hash = hash & hash;
            }
            return Math.abs(hash).toString(36);
        }

        // بدء العد التنازلي
        function startCountdown() {
            if (countdownInterval) {
                clearInterval(countdownInterval);
            }
            
            countdownInterval = setInterval(() => {
                const now = Date.now();
                const elapsed = now - sessionStartTime;
                const remaining = sessionDuration - elapsed;
                
                if (remaining <= 0) {
                    clearInterval(countdownInterval);
                    endSession();
                    return;
                }
                
                const minutes = Math.floor(remaining / 60000);
                const seconds = Math.floor((remaining % 60000) / 1000);
                
                if (timeRemaining) {
                    timeRemaining.textContent = `${minutes}:${seconds.toString().padStart(2, '0')}`;
                    
                    // تغيير لون المؤقت حسب الوقت المتبقي
                    if (remaining < 60000) { // أقل من دقيقة
                        timeRemaining.className = 'text-xl font-bold text-red-500 countdown-warning';
                    } else if (remaining < 300000) { // أقل من 5 دقائق
                        timeRemaining.className = 'text-xl font-bold text-yellow-500';
                    } else {
                        timeRemaining.className = 'text-xl font-bold text-primary';
                    }
                }
            }, 1000);
        }

        // إنهاء الجلسة ومسح البيانات
        function endSession() {
            // مسح جميع بيانات الغرفة من Firebase
            if (roomRef) {
                roomRef.remove().then(() => {
                    console.log('✅ تم مسح بيانات الغرفة');
                }).catch((error) => {
                    console.error('خطأ في مسح البيانات:', error);
                });
            }

            // إيقاف جميع المستمعين
            if (messagesRef) messagesRef.off();
            if (usersRef) usersRef.off();

            // إظهار شاشة انتهاء الجلسة
            chatScreen.classList.add('hidden');
            expiredScreen.classList.remove('hidden');

            // إعادة تعيين المتغيرات
            currentRoom = null;
            currentUser = null;
            messagesRef = null;
            usersRef = null;
            roomRef = null;
            sessionStartTime = null;
        }

        // دخول الغرفة
        function enterRoom() {
            if (!selectedImage || !usernameInput.value.trim() || !passwordInput.value.trim() || !isReady) {
                showAlert('يرجى إكمال جميع البيانات والانتظار حتى جاهزية النظام');
                return;
            }

            const roomKey = generateRoomKey(selectedImage, passwordInput.value.trim());
            currentRoom = roomKey;
            currentUser = {
                id: 'user_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9),
                username: usernameInput.value.trim(),
                joinTime: Date.now(),
                lastSeen: Date.now()
            };

            sessionDuration = selectedDuration * 60 * 1000;

            // إعداد مراجع Firebase
            roomRef = database.ref(`rooms/${roomKey}`);
            messagesRef = database.ref(`rooms/${roomKey}/messages`);
            usersRef = database.ref(`rooms/${roomKey}/users/${currentUser.id}`);

            // التحقق من وجود الغرفة أو إنشاؤها
            roomRef.once('value').then((snapshot) => {
                const roomData = snapshot.val();
                
                if (roomData && roomData.sessionStart) {
                    // غرفة موجودة - التحقق من انتهاء الوقت
                    const elapsed = Date.now() - roomData.sessionStart;
                    if (elapsed >= roomData.sessionDuration) {
                        // انتهت صلاحية الغرفة - مسحها وإنشاء جديدة
                        roomRef.remove().then(() => {
                            createNewRoom();
                        });
                    } else {
                        // التحقق من العدد الأقصى
                        const currentUsers = roomData.users ? Object.keys(roomData.users).length : 0;
                        
                        if (currentUsers >= roomData.settings.maxUsers) {
                            showRoomFullModal();
                            return;
                        }

                        // الانضمام للغرفة الموجودة
                        sessionStartTime = roomData.sessionStart;
                        sessionDuration = roomData.sessionDuration;
                        maxUsers = roomData.settings.maxUsers;
                        allowVoiceMessages = roomData.settings.allowVoiceMessages;
                        allowImages = roomData.settings.allowImages;
                        joinExistingRoom();
                    }
                } else {
                    // إنشاء غرفة جديدة
                    createNewRoom();
                }
            });
        }

        // إنشاء غرفة جديدة
        function createNewRoom() {
            sessionStartTime = Date.now();
            
            // حفظ معلومات الجلسة
            roomRef.set({
                sessionStart: sessionStartTime,
                sessionDuration: sessionDuration,
                settings: {
                    maxUsers: maxUsers,
                    allowVoiceMessages: allowVoiceMessages,
                    allowImages: allowImages,
                    image: selectedImage,
                    createdBy: currentUser.username,
                    createdAt: Date.now()
                }
            });

            joinExistingRoom();
        }

        // الانضمام للغرفة الموجودة
        function joinExistingRoom() {
            // الانتقال لشاشة المحادثة
            loginScreen.classList.add('hidden');
            chatScreen.classList.remove('hidden');
            
            // تحديث واجهة الغرفة
            if (roomImagePreview) {
                roomImagePreview.innerHTML = `<img src="${selectedImage.url}" alt="${selectedImage.name}" class="w-full h-full object-cover">`;
            }
            if (roomStatus) roomStatus.textContent = currentUser.username;
            if (maxUsersDisplay) maxUsersDisplay.textContent = `من ${maxUsers}`;
            if (totalTimeDisplay) {
                const totalMinutes = Math.floor(sessionDuration / 60000);
                totalTimeDisplay.textContent = `المدة الكاملة: ${totalMinutes} دقيقة`;
            }
            
            // إخفاء الأزرار حسب الإعدادات
            if (!allowVoiceMessages && voiceRecordBtn) {
                voiceRecordBtn.style.display = 'none';
            }
            if (!allowImages && sendImageBtn) {
                sendImageBtn.style.display = 'none';
            }

            // تسجيل المستخدم في الغرفة
            usersRef.set(currentUser);

            // بدء العد التنازلي
            startCountdown();

            // الاستماع للرسائل
            messagesRef.on('child_added', (snapshot) => {
                const message = snapshot.val();
                if (message) {
                    displayMessage(message);
                    updateMessageCount();
                }
            });

            // الاستماع للمستخدمين
            const allUsersRef = database.ref(`rooms/${currentRoom}/users`);
            allUsersRef.on('value', (snapshot) => {
                const users = snapshot.val() || {};
                const userCount = Object.keys(users).length;
                updateUserCount(userCount);
            });

            // تحديث آخر نشاط
            const heartbeat = setInterval(() => {
                if (usersRef) {
                    usersRef.update({ lastSeen: Date.now() });
                }
            }, 30000);

            // إرسال رسالة انضمام
            const joinMessage = {
                text: `${currentUser.username} انضم للجلسة 👋`,
                timestamp: Date.now(),
                type: 'system',
                username: 'النظام',
                userId: 'system'
            };
            
            messagesRef.push(joinMessage);
            
            if (messageInput) messageInput.focus();

            // إزالة المستخدم عند إغلاق النافذة
            window.addEventListener('beforeunload', () => {
                if (usersRef) {
                    usersRef.remove();
                }
                clearInterval(heartbeat);
            });

            console.log('✅ تم دخول الغرفة:', currentRoom);
        }

        // عرض نافذة الغرفة ممتلئة
        function showRoomFullModal() {
            if (roomFullModal) {
                roomFullModal.classList.remove('hidden');
            }
        }

        // بدء تسجيل الصوت
        async function startVoiceRecording() {
            if (!allowVoiceMessages) {
                showAlert('الرسائل الصوتية غير مسموحة في هذه الغرفة');
                return;
            }

            try {
                const stream = await navigator.mediaDevices.getUserMedia({ audio: true });
                mediaRecorder = new MediaRecorder(stream);
                audioChunks = [];
                
                mediaRecorder.ondataavailable = (event) => {
                    audioChunks.push(event.data);
                };

                mediaRecorder.onstop = () => {
                    const audioBlob = new Blob(audioChunks, { type: 'audio/wav' });
                    sendVoiceMessage(audioBlob);
                    stream.getTracks().forEach(track => track.stop());
                };

                mediaRecorder.start();
                isRecording = true;
                recordingStartTime = Date.now();
                
                // إظهار لوحة التسجيل
                if (voiceRecordingPanel) {
                    voiceRecordingPanel.classList.remove('hidden');
                }
                
                // بدء مؤقت التسجيل
                recordingTimer = setInterval(updateRecordingTimer, 1000);
                
                // إيقاف التسجيل تلقائياً بعد 60 ثانية
                setTimeout(() => {
                    if (isRecording) {
                        stopVoiceRecording();
                    }
                }, 60000);

            } catch (error) {
                console.error('خطأ في الوصول للميكروفون:', error);
                showAlert('لا يمكن الوصول للميكروفون. تأكد من السماح بالوصول للميكروفون.');
            }
        }

        // إيقاف تسجيل الصوت
        function stopVoiceRecording() {
            if (mediaRecorder && isRecording) {
                mediaRecorder.stop();
                isRecording = false;
                
                if (recordingTimer) {
                    clearInterval(recordingTimer);
                    recordingTimer = null;
                }
                
                // إخفاء لوحة التسجيل
                if (voiceRecordingPanel) {
                    voiceRecordingPanel.classList.add('hidden');
                }
            }
        }

        // إلغاء تسجيل الصوت
        function cancelVoiceRecording() {
            if (mediaRecorder && isRecording) {
                mediaRecorder.stop();
                isRecording = false;
                audioChunks = [];
                
                if (recordingTimer) {
                    clearInterval(recordingTimer);
                    recordingTimer = null;
                }
                
                // إخفاء لوحة التسجيل
                if (voiceRecordingPanel) {
                    voiceRecordingPanel.classList.add('hidden');
                }
                
                // إيقاف الميكروفون
                if (mediaRecorder.stream) {
                    mediaRecorder.stream.getTracks().forEach(track => track.stop());
                }
            }
        }

        // تحديث مؤقت التسجيل
        function updateRecordingTimer() {
            if (recordingTimerDisplay && isRecording) {
                const elapsed = Math.floor((Date.now() - recordingStartTime) / 1000);
                const minutes = Math.floor(elapsed / 60);
                const seconds = elapsed % 60;
                recordingTimerDisplay.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            }
        }

        // إرسال الرسالة الصوتية
        function sendVoiceMessage(audioBlob) {
            const reader = new FileReader();
            reader.onload = function(e) {
                const message = {
                    audioUrl: e.target.result,
                    duration: Math.floor((Date.now() - recordingStartTime) / 1000),
                    timestamp: Date.now(),
                    type: 'voice',
                    username: currentUser.username,
                    userId: currentUser.id
                };

                messagesRef.push(message);
            };
            reader.readAsDataURL(audioBlob);
        }

        // عرض رسالة
        function displayMessage(message) {
            if (!messagesContainer) return;

            // إزالة رسالة الترحيب إذا كانت موجودة
            const welcomeMsg = messagesContainer.querySelector('.text-center');
            if (welcomeMsg && messagesContainer.children.length > 1) {
                welcomeMsg.remove();
            }

            const messageDiv = document.createElement('div');
            messageDiv.className = 'message-animation mb-4';

            if (message.type === 'system') {
                messageDiv.innerHTML = `
                    <div class="flex justify-center">
                        <div class="bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200 
                                    px-4 py-2 rounded-xl text-sm font-medium max-w-md text-center shadow-sm">
                            ${escapeHtml(message.text)}
                        </div>
                    </div>
                `;
            } else {
                const isMyMessage = message.userId === currentUser.id;
                messageDiv.innerHTML = `
                    <div class="flex ${isMyMessage ? 'justify-end' : 'justify-start'}">
                        <div class="max-w-sm lg:max-w-md px-4 py-3 rounded-2xl shadow-sm ${
                            isMyMessage 
                                ? 'bg-primary text-white rounded-br-md' 
                                : 'bg-white dark:bg-gray-700 text-gray-900 dark:text-white rounded-bl-md border border-gray-200 dark:border-gray-600'
                        }">
                            <div class="text-xs opacity-70 mb-1 font-semibold">
                                ${message.username || 'مستخدم غير معروف'}
                            </div>
                            ${message.type === 'image' ? 
                                `<img src="${message.imageUrl}" alt="صورة" class="max-w-full rounded-lg mb-2 cursor-pointer hover:scale-105 transition-transform"
                                     onclick="showImageModal('${message.imageUrl}')">` :
                              message.type === 'voice' ?
                                `<div class="bg-gray-100 dark:bg-gray-600 rounded-lg p-3 mb-2">
                                    <div class="flex items-center space-x-3 space-x-reverse">
                                        <button onclick="toggleAudio(this, '${message.audioUrl}')" 
                                                class="w-8 h-8 bg-primary hover:bg-primary/90 text-white rounded-full flex items-center justify-center transition-colors">
                                            ▶️
                                        </button>
                                        <div class="flex-1">
                                            <div class="text-xs text-gray-600 dark:text-gray-300">🎤 رسالة صوتية</div>
                                            <div class="text-xs text-gray-500">${message.duration || 0} ثانية</div>
                                        </div>
                                    </div>
                                 </div>` :
                                `<p class="break-words leading-relaxed">${escapeHtml(message.text)}</p>`
                            }
                            <div class="text-xs opacity-70 mt-2 text-left">
                                ${new Date(message.timestamp).toLocaleTimeString('ar-SA', { 
                                    hour: '2-digit', 
                                    minute: '2-digit' 
                                })}
                            </div>
                        </div>
                    </div>
                `;
            }

            messagesContainer.appendChild(messageDiv);
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }

        // تشغيل/إيقاف الصوت
        function toggleAudio(button, audioUrl) {
            // البحث عن audio element موجود
            let audio = button.parentElement.querySelector('audio');
            
            if (!audio) {
                // إنشاء audio element جديد
                audio = document.createElement('audio');
                audio.src = audioUrl;
                audio.preload = 'metadata';
                button.parentElement.appendChild(audio);
                
                audio.addEventListener('ended', () => {
                    button.textContent = '▶️';
                });
            }
            
            if (audio.paused) {
                audio.play();
                button.textContent = '⏸️';
            } else {
                audio.pause();
                button.textContent = '▶️';
            }
        }

        // تحديث عداد المستخدمين
        function updateUserCount(count) {
            if (userCount) userCount.textContent = `• ${count} مستخدم`;
        }

        // تحديث عداد الرسائل
        function updateMessageCount() {
            if (!messageCount) return;
            const count = messagesContainer.children.length - 1;
            messageCount.textContent = `• ${Math.max(0, count)} رسالة`;
        }

        // إرسال رسالة
        function sendMessage() {
            if (!messageInput || !messagesRef) return;
            
            const text = messageInput.value.trim();
            if (!text || text.length > 500) return;

            const message = {
                text: text,
                timestamp: Date.now(),
                type: 'text',
                username: currentUser.username,
                userId: currentUser.id
            };

            messagesRef.push(message);
            messageInput.value = '';
            messageInput.style.height = 'auto';
            updateCharCount();
        }

        // إرسال صورة
        function handleImageSend(file) {
            if (!allowImages) {
                showAlert('إرسال الصور غير مسموح في هذه الغرفة');
                return;
            }

            if (!file || !file.type.startsWith('image/')) {
                showAlert('يرجى اختيار ملف صورة صحيح');
                return;
            }
            
            if (file.size > 5 * 1024 * 1024) {
                showAlert('حجم الصورة كبير جداً (الحد الأقصى 5 ميجابايت)');
                return;
            }
            
            const reader = new FileReader();
            reader.onload = function(e) {
                const message = {
                    imageUrl: e.target.result,
                    timestamp: Date.now(),
                    type: 'image',
                    username: currentUser.username,
                    userId: currentUser.id
                };

                messagesRef.push(message);
            };
            reader.readAsDataURL(file);
        }

        // تحديث عداد الأحرف
        function updateCharCount() {
            if (!messageInput || !charCount) return;
            const count = messageInput.value.length;
            charCount.textContent = `${count}/500`;
            charCount.className = count > 450 ? 'absolute bottom-2 left-2 text-xs text-red-400' : 
                                   count > 400 ? 'absolute bottom-2 left-2 text-xs text-yellow-400' : 
                                   'absolute bottom-2 left-2 text-xs text-gray-400';
        }

        // رفع صورة مخصصة
        function handleCustomImage(file) {
            if (!file || !file.type.startsWith('image/')) {
                showAlert('يرجى اختيار ملف صورة صحيح');
                return;
            }
            
            const reader = new FileReader();
            reader.onload = function(e) {
                const customImage = {
                    url: e.target.result,
                    name: 'صورة مخصصة',
                    id: 'custom_' + Date.now(),
                    emoji: '🖼️'
                };
                
                const imageDiv = document.createElement('div');
                imageDiv.className = `image-hover cursor-pointer rounded-lg overflow-hidden border-3 border-transparent 
                                     hover:border-primary transition-all aspect-square relative bg-gray-100 dark:bg-gray-600`;
                imageDiv.innerHTML = `
                    <img src="${customImage.url}" alt="${customImage.name}" 
                         class="w-full h-full object-cover">
                    <div class="absolute inset-0 bg-black bg-opacity-0 hover:bg-opacity-30 transition-all 
                                flex items-center justify-center">
                        <span class="text-white text-xs font-bold opacity-0 hover:opacity-100 transition-opacity
                                   bg-black bg-opacity-70 px-2 py-1 rounded">
                            ${customImage.emoji} ${customImage.name}
                        </span>
                    </div>
                    <div class="absolute top-1 left-1 bg-primary text-white text-xs px-2 py-1 rounded">
                        مخصصة
                    </div>
                `;
                
                imageDiv.addEventListener('click', () => selectImage(customImage, imageDiv));
                if (imageGallery) {
                    imageGallery.insertBefore(imageDiv, imageGallery.firstChild);
                    selectImage(customImage, imageDiv);
                }
            };
            reader.readAsDataURL(file);
        }

        // عرض الصورة في نافذة منبثقة
        function showImageModal(imageUrl) {
            const modal = document.createElement('div');
            modal.className = 'fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center z-50 p-4';
            modal.innerHTML = `
                <div class="relative max-w-4xl max-h-full">
                    <img src="${imageUrl}" alt="صورة مكبرة" class="max-w-full max-h-full object-contain rounded-lg">
                    <button onclick="this.closest('.fixed').remove()" 
                            class="absolute top-4 right-4 text-white bg-black bg-opacity-50 rounded-full w-12 h-12 
                                   flex items-center justify-center hover:bg-opacity-75 transition-colors text-xl">
                        ✕
                    </button>
                </div>
            `;
            document.body.appendChild(modal);
            
            modal.addEventListener('click', (e) => {
                if (e.target === modal) {
                    modal.remove();
                }
            });
        }

        // مشاركة الغرفة
        function shareRoom() {
            if (!selectedImage || !passwordInput || !passwordInput.value.trim()) {
                showAlert('لمشاركة الغرفة، شارك الصورة المختارة وكلمة المرور مع أصدقائك');
                return;
            }

            const features = [];
            if (allowVoiceMessages) features.push('رسائل صوتية');
            if (allowImages) features.push('صور');

            const shareText = `🔐 انضم لغرفة المحادثة الآمنة!\n\n` +
                            `المنظر: ${selectedImage.name} ${selectedImage.emoji}\n` +
                            `كلمة المرور: ${passwordInput.value.trim()}\n` +
                            `العدد الأقصى: ${maxUsers} ${maxUsers === 2 ? 'شخصان' : 'أشخاص'}\n` +
                            `المدة: ${selectedDuration} دقيقة\n` +
                            `الميزات: ${features.join('، ') || 'نص فقط'}\n\n` +
                            `الرابط: ${window.location.href}`;
            
            if (navigator.share) {
                navigator.share({
                    title: 'غرفة المحادثة الآمنة',
                    text: shareText
                });
            } else if (navigator.clipboard) {
                navigator.clipboard.writeText(shareText).then(() => {
                    showNotification('تم نسخ معلومات الغرفة!', 'success');
                });
            } else {
                showAlert(shareText);
            }
        }

        // مغادرة الغرفة - إصلاح المشكلة
        function leaveRoom() {
            showConfirmDialog('هل أنت متأكد من مغادرة الغرفة؟', () => {
                // إرسال رسالة مغادرة
                if (messagesRef && currentUser) {
                    const leaveMessage = {
                        text: `${currentUser.username} غادر الجلسة 👋`,
                        timestamp: Date.now(),
                        type: 'system',
                        username: 'النظام',
                        userId: 'system'
                    };
                    messagesRef.push(leaveMessage);
                }

                // إزالة المستخدم من القائمة
                if (usersRef) {
                    usersRef.remove();
                }

                // إيقاف الاستماع والمؤقت
                if (messagesRef) messagesRef.off();
                if (countdownInterval) clearInterval(countdownInterval);

                // إيقاف التسجيل إذا كان نشطاً
                if (isRecording) {
                    cancelVoiceRecording();
                }

                // العودة لشاشة الدخول
                chatScreen.classList.add('hidden');
                loginScreen.classList.remove('hidden');
                
                // إعادة تحميل رسالة الترحيب
                messagesContainer.innerHTML = `
                    <div class="text-center py-8">
                        <div class="text-4xl mb-4">🎉</div>
                        <h3 class="text-lg font-semibold text-gray-700 dark:text-gray-300">مرحباً بك في الغرفة!</h3>
                        <p class="text-gray-500 dark:text-gray-400 text-sm mt-2">ابدأ المحادثة الآن...</p>
                    </div>
                `;

                // إعادة تعيين المتغيرات
                currentRoom = null;
                currentUser = null;
                messagesRef = null;
                usersRef = null;
                roomRef = null;
                sessionStartTime = null;
            });
        }

        // إنشاء جلسة جديدة
        function createNewSession() {
            expiredScreen.classList.add('hidden');
            loginScreen.classList.remove('hidden');
            
            // إعادة تعيين جميع المتغيرات
            selectedImage = null;
            selectedDuration = 5;
            currentRoom = null;
            currentUser = null;
            sessionStartTime = null;
            sessionDuration = 5 * 60 * 1000;
            maxUsers = 5;
            allowVoiceMessages = true;
            allowImages = true;
            
            // مسح الحقول
            if (usernameInput) usernameInput.value = '';
            if (passwordInput) passwordInput.value = '';
            if (customDuration) customDuration.value = '';
            
            // إعادة تحديد الافتراضيات
            const firstDurationBtn = document.querySelector('.duration-btn[data-duration="5"]');
            if (firstDurationBtn) {
                document.querySelectorAll('.duration-btn').forEach(btn => {
                    btn.classList.remove('bg-primary', 'text-white');
                    btn.classList.add('bg-gray-200', 'dark:bg-gray-600', 'text-gray-700', 'dark:text-gray-300');
                });
                firstDurationBtn.classList.add('bg-primary', 'text-white');
                firstDurationBtn.classList.remove('bg-gray-200', 'dark:bg-gray-600', 'text-gray-700', 'dark:text-gray-300');
            }
            
            // إزالة تحديد الصور
            document.querySelectorAll('.border-primary').forEach(el => {
                el.classList.remove('border-primary');
                el.classList.add('border-transparent');
            });
            
            // إعادة تحديد الافتراضيات للإعدادات
            if (maxUsersSelect) maxUsersSelect.value = '5';
            if (allowVoiceMessagesInput) allowVoiceMessagesInput.checked = true;
            if (allowImagesInput) allowImagesInput.checked = true;
            
            updateEnterButton();
            updatePreview();
        }

        // عرض إشعار
        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = `fixed top-20 right-4 z-40 ${
                type === 'success' ? 'bg-green-500' : 
                type === 'error' ? 'bg-red-500' : 'bg-blue-500'
            } text-white px-6 py-3 rounded-lg shadow-lg`;
            notification.textContent = message;
            
            document.body.appendChild(notification);
            setTimeout(() => notification.remove(), 3000);
        }

        // دالة مساعدة لتجنب XSS
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // عرض تنبيه مخصص
        function showAlert(message) {
            const modal = document.createElement('div');
            modal.className = 'fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4';
            modal.innerHTML = `
                <div class="bg-white dark:bg-gray-800 rounded-xl shadow-2xl max-w-sm w-full p-6">
                    <div class="text-center">
                        <div class="text-4xl mb-4">⚠️</div>
                        <p class="text-gray-700 dark:text-gray-300 mb-4">${message}</p>
                        <button onclick="this.closest('.fixed').remove()" 
                                class="bg-primary hover:bg-primary/90 text-white px-6 py-2 rounded-lg transition-colors">
                            حسناً
                        </button>
                    </div>
                </div>
            `;
            document.body.appendChild(modal);
        }

        // عرض تأكيد مخصص - إصلاح المشكلة
        function showConfirmDialog(message, onConfirm) {
            const modal = document.createElement('div');
            modal.className = 'fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4';
            modal.innerHTML = `
                <div class="bg-white dark:bg-gray-800 rounded-xl shadow-2xl max-w-sm w-full p-6">
                    <div class="text-center">
                        <div class="text-4xl mb-4">❓</div>
                        <p class="text-gray-700 dark:text-gray-300 mb-6">${message}</p>
                        <div class="flex justify-center space-x-3 space-x-reverse">
                            <button id="cancelConfirm" class="px-4 py-2 text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 rounded transition-colors">
                                إلغاء
                            </button>
                            <button id="confirmAction" class="px-4 py-2 bg-red-500 text-white hover:bg-red-600 rounded transition-colors">
                                تأكيد
                            </button>
                        </div>
                    </div>
                </div>
            `;
            document.body.appendChild(modal);

            // إضافة مستمعي الأحداث
            const cancelBtn = modal.querySelector('#cancelConfirm');
            const confirmBtn = modal.querySelector('#confirmAction');
            
            cancelBtn.addEventListener('click', () => {
                modal.remove();
            });
            
            confirmBtn.addEventListener('click', () => {
                modal.remove();
                onConfirm();
            });
        }

        // تهيئة التطبيق عند تحميل DOM
        document.addEventListener('DOMContentLoaded', () => {
            // تعريف جميع العناصر DOM
            loginScreen = document.getElementById('loginScreen');
            chatScreen = document.getElementById('chatScreen');
            expiredScreen = document.getElementById('expiredScreen');
            imageGallery = document.getElementById('imageGallery');
            usernameInput = document.getElementById('usernameInput');
            passwordInput = document.getElementById('passwordInput');
            customDuration = document.getElementById('customDuration');
            enterRoomBtn = document.getElementById('enterRoomBtn');
            enterBtnText = document.getElementById('enterBtnText');
            uploadImageBtn = document.getElementById('uploadImageBtn');
            customImageInput = document.getElementById('customImageInput');
            maxUsersSelect = document.getElementById('maxUsersSelect');
            allowVoiceMessagesInput = document.getElementById('allowVoiceMessages');
            allowImagesInput = document.getElementById('allowImages');
            
            roomImagePreview = document.getElementById('roomImagePreview');
            messagesContainer = document.getElementById('messagesContainer');
            messageInput = document.getElementById('messageInput');
            sendMessageBtn = document.getElementById('sendMessageBtn');
            sendImageBtn = document.getElementById('sendImageBtn');
            imageMessageInput = document.getElementById('imageMessageInput');
            charCount = document.getElementById('charCount');
            connectionStatus = document.getElementById('connectionStatus');
            statusText = document.getElementById('statusText');
            userCount = document.getElementById('userCount');
            messageCount = document.getElementById('messageCount');
            roomStatus = document.getElementById('roomStatus');
            shareRoomBtn = document.getElementById('shareRoomBtn');
            leaveRoomBtn = document.getElementById('leaveRoomBtn');
            connectionAlert = document.getElementById('connectionAlert');
            maxUsersDisplay = document.getElementById('maxUsersDisplay');
            voiceRecordBtn = document.getElementById('voiceRecordBtn');
            voiceRecordingPanel = document.getElementById('voiceRecordingPanel');
            stopRecordingBtn = document.getElementById('stopRecordingBtn');
            cancelRecordingBtn = document.getElementById('cancelRecordingBtn');
            recordingTimerDisplay = document.getElementById('recordingTimer');
            roomFullModal = document.getElementById('roomFullModal');
            newSessionBtn = document.getElementById('newSessionBtn');
            timeRemaining = document.getElementById('timeRemaining');
            totalTimeDisplay = document.getElementById('totalTimeDisplay');
            previewImage = document.getElementById('previewImage');
            previewDuration = document.getElementById('previewDuration');
            previewMaxUsers = document.getElementById('previewMaxUsers');
            previewUsername = document.getElementById('previewUsername');
            previewFeatures = document.getElementById('previewFeatures');

            // تهيئة Firebase
            initializeFirebase();
            
            // تحميل المعرض وإعداد المدة
            loadImageGallery();
            setupDurationSelection();

            // مستمعي الأحداث - إعدادات الغرفة
            if (maxUsersSelect) {
                maxUsersSelect.addEventListener('change', () => {
                    maxUsers = parseInt(maxUsersSelect.value);
                    updatePreview();
                });
            }

            if (allowVoiceMessagesInput) {
                allowVoiceMessagesInput.addEventListener('change', () => {
                    allowVoiceMessages = allowVoiceMessagesInput.checked;
                    updatePreview();
                });
            }

            if (allowImagesInput) {
                allowImagesInput.addEventListener('change', () => {
                    allowImages = allowImagesInput.checked;
                    updatePreview();
                });
            }

            // مستمعي الأحداث - شاشة الدخول
            if (usernameInput) {
                usernameInput.addEventListener('input', () => {
                    updateEnterButton();
                    updatePreview();
                });
            }
            if (passwordInput) passwordInput.addEventListener('input', updateEnterButton);
            if (enterRoomBtn) enterRoomBtn.addEventListener('click', enterRoom);
            if (uploadImageBtn) uploadImageBtn.addEventListener('click', () => customImageInput.click());
            if (customImageInput) customImageInput.addEventListener('change', (e) => {
                const file = e.target.files[0];
                if (file) handleCustomImage(file);
            });

            // Enter للدخول
            [usernameInput, passwordInput].forEach(input => {
                if (input) {
                    input.addEventListener('keypress', (e) => {
                        if (e.key === 'Enter' && enterRoomBtn && !enterRoomBtn.disabled) {
                            enterRoom();
                        }
                    });
                }
            });

            // مستمعي الأحداث - شاشة المحادثة
            if (messageInput) {
                messageInput.addEventListener('input', () => {
                    updateCharCount();
                    messageInput.style.height = 'auto';
                    messageInput.style.height = messageInput.scrollHeight + 'px';
                });

                messageInput.addEventListener('keypress', (e) => {
                    if (e.key === 'Enter' && !e.shiftKey) {
                        e.preventDefault();
                        sendMessage();
                    }
                });
            }

            if (sendMessageBtn) sendMessageBtn.addEventListener('click', sendMessage);
            if (sendImageBtn) sendImageBtn.addEventListener('click', () => imageMessageInput.click());
            if (imageMessageInput) imageMessageInput.addEventListener('change', (e) => {
                const file = e.target.files[0];
                if (file) handleImageSend(file);
            });

            // أزرار تسجيل الصوت
            if (voiceRecordBtn) voiceRecordBtn.addEventListener('click', startVoiceRecording);
            if (stopRecordingBtn) stopRecordingBtn.addEventListener('click', stopVoiceRecording);
            if (cancelRecordingBtn) cancelRecordingBtn.addEventListener('click', cancelVoiceRecording);

            if (shareRoomBtn) shareRoomBtn.addEventListener('click', shareRoom);
            if (leaveRoomBtn) leaveRoomBtn.addEventListener('click', leaveRoom);
            if (newSessionBtn) newSessionBtn.addEventListener('click', createNewSession);

            // تحديث عداد الأحرف الأولي
            updateCharCount();
            updatePreview();

            // تحديث زر الدخول كل ثانية حتى يصبح النظام جاهزاً
            const checkReady = setInterval(() => {
                updateEnterButton();
                if (isReady) {
                    clearInterval(checkReady);
                }
            }, 500);

            console.log('✅ تم تهيئة التطبيق بنجاح');
        });

        // عرض window functions globally
        window.showImageModal = showImageModal;
        window.toggleAudio = toggleAudio;
    </script>
</body>
</html>
